<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="@dimen/bezel"
    android:orientation="vertical"
    android:background="@color/white2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text_bestscore_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:textColor="@color/bestscore"
            android:textSize="@dimen/text_bestscore"
            android:text="Best Score: "/>
        <TextView
            android:id="@+id/text_bestscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:textColor="@color/bestscore"
            android:textSize="@dimen/text_bestscore"
            android:layout_below="@id/text_bestscore_text"
            android:text="$ --"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text_currentscore_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:textColor="@color/bestscore"
            android:textSize="@dimen/text_bestscore"
            android:text="Current Score: "/>
        <TextView
            android:id="@+id/text_currentscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:textColor="@color/bestscore"
            android:textSize="@dimen/text_bestscore"
            android:layout_below="@id/text_currentscore_text"
            android:text="$ 100"/>
    </RelativeLayout>

</LinearLayout>